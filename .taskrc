include ~/.config/taskwarrior/report/default
include ~/.config/taskwarrior/report/inbox
include ~/.config/taskwarrior/report/journal
include ~/.config/taskwarrior/report/next
include ~/.config/taskwarrior/report/reviewed
include ~/.config/taskwarrior/report/shopping
include ~/.config/taskwarrior/report/simple
include ~/.config/taskwarrior/theme
include ~/.config/taskwarrior/udas
include ~/.config/taskwarrior/urgency

alias.jot = add +inbox due:1d
alias.snooze = modify snooze:1h
alias.shelve = modify due: +inbox

context.couple = +drewer
context.dazzlebyte = project:dzb
context.lbz = project:lbz
context.solo = -drewer project:

data.location = ~/.task

default.command = default
