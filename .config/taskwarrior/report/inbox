report.inbox.description = Tasks that have not yet been processed

report.inbox.filter = status:pending limit:page +inbox ( scheduled.before:now or scheduled: ) ( snooze.before:now or snooze: ) 
report.inbox.sort = entry+

report.inbox.labels = ID,Description,Due,Active,Deps,P,Project,Recur,S,Until,Age
report.inbox.columns = id,description,due.relative,start.age,depends,priority,project,recur,scheduled.countdown,until.remaining,entry.age
